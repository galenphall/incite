{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2018",
		"lib": ["DOM", "ES2018", "ES2021.String"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "dist"
	},
	"include": ["src/**/*.ts"]
}
