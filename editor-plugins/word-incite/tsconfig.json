{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"rootDir": "..",
		"lib": ["ES2020", "DOM"],
		"paths": {
			"@incite/shared": ["../shared/src/index.ts"]
		}
	},
	"include": ["src/**/*.ts"]
}
